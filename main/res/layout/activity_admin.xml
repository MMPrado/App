<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/black"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height">
            <TextView
                android:id="@+id/txv_Grid"
                android:text="@string/admon"
                android:textSize="@dimen/size_34sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/main_Grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="@dimen/size_14"
            android:rowCount="3">

            <!-- Row 1 -->

            <!-- Column 1 -->
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/size_cero"
                android:layout_height="@dimen/size_cero"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/green_menu"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/schedule2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Column 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/size_cero"
                android:layout_height="@dimen/size_cero"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_rowWeight="1"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_8"
                app:cardBackgroundColor="@color/green_menu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/promotion_admin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/promotions"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_12"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- Row 2 -->
            <!-- Column 1 -->
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/size_cero"
                android:layout_height="@dimen/size_cero"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_rowWeight="1"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_8"
                app:cardBackgroundColor="@color/green_menu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/reservation_admin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reservations"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_12"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Column 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/size_cero"
                android:layout_height="@dimen/size_cero"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_rowWeight="1"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_8"
                app:cardBackgroundColor="@color/green_menu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/e"
                        tools:ignore="OnClick" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/events"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- Row 2 -->

            <!-- Column 1 -->
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/size_cero"
                android:layout_height="@dimen/size_cero"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_rowWeight="1"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_8"
                app:cardBackgroundColor="@color/green_menu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/drink_admin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drinks"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/size_cero"
                android:layout_height="@dimen/size_cero"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginRight="@dimen/size_16"
                android:layout_rowWeight="1"
                app:cardCornerRadius="@dimen/size_8"
                app:cardElevation="@dimen/size_8"
                app:cardBackgroundColor="@color/green_menu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/gallery_admin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gallery"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_18"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>
</LinearLayout>

