<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background"
    tools:context="mx.edu.utng.lajosefa.activities.ShareActivity">

    <TableRow >

        <Button
            android:id="@+id/btn_photo"
            android:layout_width="@dimen/width_btn1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:text="@string/choose_photo"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/size_text"

            />
    </TableRow>

    <TableRow >

        <ImageView
            android:id="@+id/imv_photo"
            android:layout_width="@dimen/size_374"
            android:layout_height="@dimen/heigt"
            android:layout_above="@+id/btn_share"
            android:scaleType="centerCrop" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border"
            android:text="@string/share_image"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/size_text" />
    </TableRow>

</TableLayout>
