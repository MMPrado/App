<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_15">

    <ImageView
        android:id="@+id/imv_photo"
        android:layout_width="122dp"
        android:layout_height="148dp"
        android:layout_margin="@dimen/size_8"
        android:src="@drawable/la_josefa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_drink_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drink_name"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_drink_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:text="@string/drink_description"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15sp"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>