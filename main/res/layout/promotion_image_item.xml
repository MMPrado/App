<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    cardView:cardCornerRadius="@dimen/size_10"
    cardView:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_promotion"
            android:layout_width="@dimen/size_340"
            android:layout_height="@dimen/size_200"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/la_josefa" />

     <TextView
        android:id="@+id/txv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_promotion"
        android:layout_centerHorizontal="true"
        android:text="@string/description"
        android:textColor="@color/white"
        android:textSize="@dimen/size_20"
        android:textStyle="bold" />

</RelativeLayout>

</android.support.v7.widget.CardView>