<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background"
    tools:context="mx.edu.utng.lajosefa.activities.CommentsActivity">
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="@dimen/size_340"
        android:layout_height="@dimen/size_50"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/size_27"
        android:layout_marginRight="@dimen/size_27"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/imb_add_comments"
        android:layout_toStartOf="@+id/imb_add_comments"
        android:background="@drawable/border"
        android:hint="@string/write_comment2"

        android:textSize="@dimen/size_20" />

    <ImageButton
        android:id="@+id/imb_add_comments"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_53"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
        android:text="@string/share"
        android:src="@drawable/send_message"
        android:textColor="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ltv_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imb_add_comments"
        android:layout_marginTop="@dimen/size_61"
        android:background="@color/green_comments"
        ></ListView>
</RelativeLayout>
